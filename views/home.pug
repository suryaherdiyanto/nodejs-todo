<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Todo App
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css")
    body

        .container
            h1(class="text-center") Simple Todo App

            .jumbotron.p-3
                form(action="/save-item", method="post", class="form", id="insert-form")

                    .d-flex.align-items-center.justify-content-center
                        input(type="text", name="item", class="form-control mr-3", autofocus="off", placeholder="Add item here....")
                        input(type="submit", value="Save Item", class="btn btn-primary")

            #item-wrap.list-group.pb-5
                h3(class="loading text-center") Loading tasks....
                
        script(src="https://code.jquery.com/jquery-3.5.1.min.js", integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=", crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js")
        script(src="/js/client.js")